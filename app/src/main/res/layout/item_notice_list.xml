<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30px"
    android:background="@color/color_ffffff"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="70px"
        android:layout_height="70px"
        android:layout_marginLeft="29px"
        android:layout_marginTop="29px"
        android:src="@mipmap/notice_item" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="31px"
        android:layout_marginRight="28px"
        android:orientation="vertical">

        <TextView
            android:id="@+id/notice_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="29px"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/color_333333"
            android:textSize="34px" />

        <TextView
            android:id="@+id/notice_synopsis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28px"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/color_999999"
            android:textSize="30px" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="36px"
            android:layout_marginTop="23px">

            <TextView
                android:id="@+id/notice_isPartyMember"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="18px"
                android:text="党员"
                android:textColor="@color/color_e60000"
                android:textSize="24px"
                android:visibility="gone" />

            <TextView
                android:id="@+id/notice_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/notice_isPartyMember"
                android:textColor="@color/color_999999"
                android:textSize="24px" />

            <TextView
                android:id="@+id/notice_show_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:clickable="true"
                android:text="查看详情 >>"
                android:textColor="@color/color_e60000"
                android:textSize="24px" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>