<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="41px">

    <TextView
        android:id="@+id/learn_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textColor="@color/color_333333"
        android:textSize="30px" />

    <TextView
        android:id="@+id/learn_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50px"
        android:layout_marginRight="10px"
        android:layout_toLeftOf="@+id/learn_item_status"
        android:layout_toRightOf="@id/learn_item_time"
        android:textColor="@color/color_333333"
        android:textSize="30px" />

    <TextView
        android:id="@+id/learn_item_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textSize="30px" />
</RelativeLayout>