<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="142px"
    android:layout_marginTop="2px"
    android:background="@color/color_ffffff"
    android:orientation="vertical">

    <TextView
        android:id="@+id/learning_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="30px"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/color_333333"
        android:textSize="34px" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="28px">

        <ImageView
            android:id="@+id/learning_img"
            android:layout_width="24px"
            android:layout_height="24px"
            android:layout_centerVertical="true"
            android:src="@mipmap/learning_time" />

        <TextView
            android:id="@+id/learning_list_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"
            android:layout_toRightOf="@+id/learning_img"
            android:textColor="@color/color_999999"
            android:textSize="24px" />

        <TextView
            android:visibility="gone"
            android:id="@+id/learning_list_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="end"
            android:text="完成学习"
            android:textColor="@color/color_999999"
            android:textSize="24px"/>
    </RelativeLayout>
</LinearLayout>