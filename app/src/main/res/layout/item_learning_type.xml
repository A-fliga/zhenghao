<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="128px"
    android:layout_marginBottom="20px"
    android:layout_marginLeft="30px"
    android:layout_marginRight="30px"
    android:background="@color/color_ffffff"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/learning_list_img"
        android:layout_width="24px"
        android:layout_height="match_parent"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/learning_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="100px"
        android:textColor="@color/color_333333"
        android:textSize="34px" />

    <ImageView
        android:id="@+id/learning_list_wenzhang"
        android:layout_width="26px"
        android:layout_height="30px"
        android:layout_centerVertical="true"
        android:layout_marginLeft="470px"
        android:layout_toRightOf="@+id/learning_list_img"
        android:src="@mipmap/wenzhang" />

    <TextView
        android:id="@+id/learning_list_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="18px"
        android:layout_toRightOf="@+id/learning_list_wenzhang"
        android:textColor="@color/color_999999"
        android:textSize="30px" />
</RelativeLayout>