<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f0f0f0"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <org.baoshengVillage.widget.NotAutoScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="292px"
                android:background="@color/color_ffffff"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/user_party_icon"
                    android:layout_width="180px"
                    android:layout_height="180px"
                    android:layout_marginTop="68px"
                    android:src="@mipmap/normal_head" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="105px"
                android:layout_marginTop="10px"
                android:background="@color/color_ffffff"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:text="昵称"
                    android:textColor="@color/color_333333"
                    android:textSize="30px" />

                <TextView
                    android:id="@+id/user_party_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30px"
                    android:textColor="@color/color_999999"
                    android:textSize="30px" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="105px"
                android:layout_marginTop="1px"
                android:background="@color/color_ffffff"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:text="性别"
                    android:textColor="@color/color_333333"
                    android:textSize="30px" />

                <TextView
                    android:id="@+id/user_party_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30px"
                    android:textColor="@color/color_999999"
                    android:textSize="30px" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="105px"
                android:layout_marginTop="1px"
                android:background="@color/color_ffffff"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:text="出生日期"
                    android:textColor="@color/color_333333"
                    android:textSize="30px" />

                <TextView
                    android:id="@+id/user_party_birth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30px"
                    android:textColor="@color/color_999999"
                    android:textSize="30px" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20px"
                android:background="@color/color_ffffff"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:layout_marginTop="36px"
                    android:text="党员信息"
                    android:textColor="@color/color_333333"
                    android:textSize="30px" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <TextView
                        android:id="@+id/user_party_info"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="28px"
                        android:layout_marginRight="28px"
                        android:layout_marginTop="32px"
                        android:background="@color/color_f5f5f5"
                        android:lineSpacingExtra="8px"
                        android:padding="30px"
                        android:textSize="36px" />
                </ScrollView>
            </LinearLayout>
        </LinearLayout>
    </org.baoshengVillage.widget.NotAutoScrollView>
</LinearLayout>