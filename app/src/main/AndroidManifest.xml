<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.baoshengVillage">

    <uses-permission android:name="android.permission.INTERNET" />
    <!--获取当前wifi状态 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!--允许程序改变网络连接状态 -->
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".application.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/mlogo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/mlogo"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name="org.baoshengVillage.mvp.presenter.activity.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".mvp.presenter.activity.NoticeDetailActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity
            android:name=".mvp.presenter.activity.ChangePwdActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />

        <activity
            android:name=".mvp.presenter.activity.RegisterActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity
            android:name=".mvp.presenter.activity.LoginActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />

        <activity
            android:name=".mvp.presenter.activity.SettingsActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />

        <activity
            android:name=".mvp.presenter.activity.UserInfoActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />

        <activity
            android:name=".mvp.presenter.activity.PartyMemberActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity
            android:name=".mvp.presenter.activity.IdentifyPartyActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity
            android:name=".mvp.presenter.activity.PartyIntegrationActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity
            android:name=".mvp.presenter.activity.LearningRecordActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity

            android:name=".mvp.presenter.activity.ScanActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait"
            android:stateNotNeeded="true"
            android:theme="@style/zxing_CaptureTheme"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".mvp.presenter.activity.FeedBackActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity
            android:name=".mvp.presenter.activity.WebViewActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />

        <activity
            android:name=".mvp.presenter.activity.AllInfoDetailActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />

        <activity
            android:name=".mvp.presenter.activity.SpiritActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />

        <activity
            android:name=".mvp.presenter.activity.AllInfoListActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />

        <activity
            android:name=".mvp.presenter.activity.PartyLearningActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />

        <activity
            android:name=".mvp.presenter.activity.LearningListActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />

        <activity
            android:name=".mvp.presenter.activity.LearningDetailActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />

        <activity
            android:name=".mvp.presenter.activity.CertificateActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />

        <activity
            android:name=".mvp.presenter.activity.CertificateDetailActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />


        <activity
            android:name="com.soundcloud.android.crop.CropImageActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />


        <activity
            android:name=".mvp.presenter.activity.SettingUrlActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />

        <meta-data
            android:name="design_width"
            android:value="750" />
        <meta-data
            android:name="design_height"
            android:value="1334" />

        <!--极光推送 接受自定义消息-->
        <receiver
            android:name=".receiver.JpushCustomerReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="cn.jpush.android.intent.REGISTRATION" />
                <action android:name="cn.jpush.android.intent.MESSAGE_RECEIVED" />
                <action android:name="cn.jpush.android.intent.NOTIFICATION_RECEIVED" />
                <action android:name="cn.jpush.android.intent.NOTIFICATION_OPENED" />
                <action android:name="cn.jpush.android.intent.NOTIFICATION_CLICK_ACTION" />
                <action android:name="cn.jpush.android.intent.CONNECTION" />

                <category android:name="org.baoshengVillage" />
            </intent-filter>
        </receiver>

    </application>

</manifest>